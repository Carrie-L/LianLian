<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
   >

    <data>
        <variable
            name="viewmodel"
            type="com.carrie.lianlian.viewModel.DiaryEditViewModel" />
    </data>

    <LinearLayout
        android:id="@+id/ll_header"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
       >

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:text="@{viewmodel.createDate}"
            />

        <ImageView
            android:id="@+id/iv_mood"
            style="@style/diary_edit_item_style"
            android:background="@drawable/emoji_1" />


        <ImageView
            android:id="@+id/iv_weather"
            style="@style/diary_edit_item_style"
            android:background="@drawable/weather_1" />


        <ImageView
            android:id="@+id/btn_bg"
            style="@style/diary_edit_item_style"
            android:background="@drawable/ic_menu_bg" />

        <ImageView
            android:id="@+id/btn_size"
            style="@style/diary_edit_item_style"
            android:background="@drawable/ic_textsize" />

    </LinearLayout>

</layout>
